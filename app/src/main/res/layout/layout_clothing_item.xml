<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/standard_margin">

    <com.example.sshahini.myapplication.view.AdjustableImageView
        android:id="@+id/clothing_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/pic1_clothes"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/clothing_image"
        android:padding="@dimen/standard_margin_x2">
        <TextView
            android:id="@+id/clothing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_font_size"
            tools:text="عنوان لباس"/>
        <TextView
            android:id="@+id/clothing_viewcount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_font_size"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_below="@id/clothing_title"
            tools:text="700"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/clothing_viewcount_text"
            android:layout_alignBottom="@id/clothing_viewcount_text"
            android:layout_toLeftOf="@id/clothing_viewcount_text"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_views_white"/>
    </RelativeLayout>
</RelativeLayout>