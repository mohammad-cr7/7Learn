<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sshahini.myapplication.animations.AnimationActivity">
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_load_from_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:switchPadding="@dimen/standard_margin"
        android:text="بارگذاری انیمیشن از xml"/>
    <ImageView
        android:id="@+id/image_kourosh"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/funny_boy"
        android:layout_gravity="center_horizontal"/>

    <com.example.sshahini.myapplication.view.custom.CustomFontButton
        android:id="@+id/button_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="شروع"
        style="@style/button_primary_style"
        android:layout_gravity="bottom"/>
</FrameLayout>
