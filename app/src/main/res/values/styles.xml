<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="button_primary_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="button_accent_style">
        <item name="android:background">@drawable/selector_accent_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="animations_button_primary" parent="button_primary_style">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="animations_button_accent" parent="button_accent_style">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="authentication_edit_texts_style">
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:background">@drawable/selector_authentication_edit_texts</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">@dimen/margin_authentication_edit_texts</item>
        <item name="android:layout_marginLeft">@dimen/margin_authentication_edit_texts</item>
    </style>
</resources>
